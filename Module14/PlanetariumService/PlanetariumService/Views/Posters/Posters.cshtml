@model IEnumerable<PlanetariumService.Models.Poster>

@{
    ViewData["Title"] = "Posters";
}
<h1>@ViewData["Title"]</h1>
<!DOCTYPE html>
<html>
   <head>
      <meta name = "viewport" content = "width = device-width" />
      <title>Posters</title>
   </head>
	
   <body>
       @using (Html.BeginForm())
{
       <p>Choose date interval for posters</p>
       <input name="dateFrom" type="date" value="@(DateTime.Now.AddDays(-15).ToString("yyyy-MM-dd"))"/>
       <input name="dateTo" type="date" value="@(DateTime.Now.ToString("yyyy-MM-dd"))"/>
       <input type="submit" value="Search" />
}

      <p>@Html.ActionLink("Create New", "Create")</p>
               @Html.DisplayNameFor(model => model.DateOfEvent)
            <th>
               @Html.DisplayNameFor(model => model.Price)
            </th>
				
            <th>
               @Html.DisplayNameFor(model => model.Performance.Title)
            </th>
				
            <th></th>
         </tr>
			
         @foreach (var item in Model) {
            <div>
                  @(DateTime.Now.ToString("yyyy-MM-dd"))
                  @Html.DisplayFor(modelItem => item.DateOfEvent)
                  @Html.DisplayFor(modelItem => item.Price)
                  @Html.DisplayFor(modelItem => item.Performance.Title)
					
                  @Html.ActionLink("Order", "Order", new { id = item.Id }) 
            </div>
         }			
   </body>
</html>
